<div class="container-fluid">

  <%= @resort.errors.full_messages %>

  <%= form_for @resort, html: {class: "form", :multipart => true} do |f| %> 

    <div class="col-md-8 col-md-offset-2">

      <div class="form-horizontal form-border">

        <div class="form-group">
          <%= f.label :name, "Resort Name", { class: "control-label text-left" } %>
          <%= f.text_field :name, { class: "form-control col-md-5", :type => "text", :placeholder => "Whistler Blackcomb" } %>
        </div>

        <div class="form-group">
          <%= f.label :address, "Resort address", { class: "control-label text-left" }  %>
          <%= f.text_field :address, { class: "form-control col-md-5", :type => "text", :placeholder => "1600 Pennsylvania Avenue, Washington, DC, 00011" } %>
        </div>

        <div class="form-group">
          <%= f.label :country, "Resort country", { class: "control-label text-left" }  %>
          <%= f.text_field :country, { class: "form-control col-md-5", :type => "text", :placeholder => "Canada" } %>
        </div>

        <div class="form-group">
          <%= f.label :website, "Website", { class: "control-label text-left" }  %>
          <%= f.text_field :website, { class: "form-control col-md-5", :type => "text", :placeholder => "www.website.com" } %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "Phone number", { class: "control-label text-left" }  %>
          <%= f.text_field :phone_number, { class: "form-control col-md-5", :type => "text", :placeholder => "1.800.466.4666" } %>
        </div>

        <div class="form-group">
          <%= f.label :skiable_acres, "Skiable Acres", { class: "control-label text-left" }  %>
          <%= f.text_field :skiable_acres, { class: "form-control col-md-5", :type => "text", :placeholder => "4200" } %>
        </div>

        <div class="form-group">
          <%= f.label :lift_count, "Lift Count", { class: "control-label text-left" }  %>
          <%= f.text_field :lift_count, { class: "form-control col-md-5", :type => "text", :placeholder => "30" } %>
        </div>

        <div class="form-group">
          <%= f.label :run_count, "Run count", { class: "control-label text-left" }  %>
          <%= f.text_field :run_count, { class: "form-control col-md-5", :type => "text", :placeholder => "130" } %>
        </div>

        <div class="form-group">
          <%= f.label :major_airport, "Major Airport", { class: "control-label text-left" }  %>
          <%= f.text_field :major_airport, { class: "form-control col-md-5", :type => "text", :placeholder => "Please enter the 3 letter airport code (e.g. LAX, JFK etc.)" } %>
        </div>

        <div class="form-group">
          <%= f.label :local_airport, "Local Airport", { class: "control-label text-left" }  %>
          <%= f.text_field :local_airport, { class: "form-control col-md-5", :type => "text", :placeholder => "Please enter the 3 letter airport code (e.g. LAX, JFK etc.)" } %>
        </div>

        <div class="form-group">
          <%= f.label :snowboard, "I snowboard...", { class: "control-label, text-left" } %>
          <%= f.check_box :ski, { class: "form-control col-md-5" } %>
        </div>

        <div class="form-group">
          <%= f.label :level_green, "Percentage of green runs " %> 
          <%= f.text_field :level_green, { class: "form-control col-md-5", :type => "text", :placeholder => "% of green runs" } %>
        </div>

        <div class="form-group">
          <%= f.label :level_blue, "Percentage of blue runs " %> 
          <%= f.text_field :level_blue, { class: "form-control col-md-5", :type => "text", :placeholder => "% of blue runs" } %>
        </div>

        <div class="form-group">
          <%= f.label :level_black, "Percentage of green runs " %> 
          <%= f.text_field :level_black, { class: "form-control col-md-5", :type => "text", :placeholder => "% of black runs" } %>
        </div>

        <div class="form-group">
          <%= f.label :level_double_black, "Percentage of double black runs " %> 
          <%= f.text_field :level_double_black, { class: "form-control col-md-5", :type => "text", :placeholder => "% of double black runs" } %>
        </div>

        <div class="form-group" >
          <%= f.label :description, "Resort description", { class: "control-label text-left" }  %> 
          <%= f.text_area :description, { class: "form-control col-md-5", :type => "text", :placeholder => "Description" } %>
        </div>

        <div class="form-group">
          <%= f.label :sno_country_id, "The Sno Country API ID " %> 
          <%= f.text_field :sno_country_id, { class: "form-control col-md-5", :type => "text", :placeholder => "000000" } %>
        </div>

        <div class="form-group">
          <%= f.submit "Add this resort", {:controller => 'resorts', :method => :create, class: "btn btn-primary btn-large col-md-4 col-md-offset-4" } %>
        </div>

      </div>

    </div>

  <% end %>

</div>
